<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper  namespace="hMapper">
	<insert id="insert">
		insert into HSearch(h_code,h_name)
		values(#{h_code},#{h_name})
	</insert>
	<select id="list" resultType="com.example.domain.HVO">
		select * from hsearch
		order by h_name asc
		limit 0,6
	</select>
	<select id="slist" resultType="com.example.domain.HVO">
		select * from hsearch
		where h_name like concat('%',#{keyword},'%')
		limit 0,6
	</select>
	
	<select id="read" resultType="com.example.domain.HVO">
		select * from hsearch
		where h_code=#{h_code}
	</select>
	
	<select id="klist" resultType="com.example.domain.HVO">
		select * from hsearch
		<if test="searchType=='h_name'">
			where h_name like concat('%',#{keyword},'%')
		</if>
		limit 0,6
	</select>
</mapper>

